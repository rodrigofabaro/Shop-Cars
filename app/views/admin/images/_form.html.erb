<% form_for([:admin, @car, @image], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.file_field :picture %>
  </p>

    <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => 'input', :rows => 2, :cols => 50 %>
  <p>

    <%= f.submit button, :class => 'submit' %>

<% end %>

