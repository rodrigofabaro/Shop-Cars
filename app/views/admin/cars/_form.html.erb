<% form_for([:admin, @car], :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :mark %><br />
    <%= f.text_field :mark %>
  </p>
  <p>
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :fuel %><br />
    <%= f.text_field :fuel %>
  </p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => 'input', :rows => 8, :cols => 50 %>
  </p>
  <p>
     <%= f.submit button, :class => 'button' %>
  </p>
<% end %>

